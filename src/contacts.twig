{% extends 'templates/base.twig' %}

{% set darkHeader = true %}
{% set map = true %}

{% block page %}
<section class="contacts">
  <div class="container">
  {% include 'templates/breadcrumbs.twig' %}
    <h1 class="contcts__title">Контакты</h1>
    <p class="contacts__company-type">Общество с ограниченной ответственностью</p>
    <p class="contacts__company-name">&laquo;Единая снабжающая компания&raquo;</p>
    <ul class="contacts__list">
      <li class="contacts__item _address">
        <h4 class="contacts__item-title">Адрес</h4>
        <p class="contacts__item-value">620137, г. Екатеринбург, пер. Шоферов, д.&nbsp;5, оф.&nbsp;305</p>
      </li>
      <li class="contacts__item _phone">
        <h4 class="contacts__item-title">Номер телефона</h4>
        <a href="tel:+74998880099" class="contacts__item-value">+7 (499) 888-00-99</a>
      </li>
      <li class="contacts__item _social">
        <div class="contacts__social-wrap">
          <h4 class="contacts__item-title">Соц. сети</h4>
          <a href="tel:89994445566" class="contacts__item-value">8 (999) 444-55-66</a>
        </div>
        <ul class="social-list">
          <li class="social-list__item">
            <a href="#" target="_blank" class="social-list__link">
              <svg class="tg"><use xlink:href="assets/sprite.svg#tg"></use></svg>
            </a>
          </li>
          <li class="social-list__item">
            <a href="#" target="_blank" class="social-list__link">
              <svg><use xlink:href="assets/sprite.svg#wa"></use></svg>
            </a>
          </li>
        </ul>
      </li>
      <li class="contacts__item _email">
        <h4 class="contacts__item-title">E-mail</h4>
        <a href="mailto:info@gozk.ru" target="_blank" class="contacts__item-value">info@gozk.ru</a>
      </li>
      <li class="contacts__item _details">
        <h4 class="contacts__item-title">Реквизиты</h4>
        <a href="assets/img/logo.svg" download class="contacts__item-value">
          <span>скачать</span>
          <svg><use xlink:href="assets/sprite.svg#chevron-down-line"></use></svg>
        </a>
      </li>
      <li class="contacts__item _working-hours">
        <h4 class="contacts__item-title">Режим работы</h4>
        <p class="contacts__item-value">Мы&nbsp;работаем каждый будний день с&nbsp;10:00 до&nbsp;18:00. Выходные дни: Суббота, Воскресенье</p>
      </li>
    </ul>
    <div class="contacts__map" id="contacts-map"></div>
  </div>
</section>

<section class="feedback">
  <div class="container">
    <h2 class="feedback__title title">Обратная связь</h2>
    <form action="action" method="post" class="feedback__form form js-form" data-name="feedback">
      <div class="feedback__fields">
        <div class="feedback__text-inputs">
          <div class="form__item js-form-item">
            <input type="text" placeholder="Ваше имя*" class="form__text-input js-required" name="name" data-name="name">
          </div>
          <div class="form__item js-form-item">
            <input type="text" placeholder="Название организации" class="form__text-input" name="organization">
          </div>
          <div class="form__item js-form-item">
            <input type="text" placeholder="Телефон*" class="form__text-input js-required js-phone-mask" inputmode="numeric" name="phone" data-name="phone">
          </div>
          <div class="form__item js-form-item">
            <input type="text" placeholder="E-mail" class="form__text-input" name="email">
          </div>
        </div>
        <div class="form__item feedback__textarea-wrap js-form-item">
          <textarea class="form__text-input feedback__textarea js-required" name="message" data-name="message" placeholder="Сообщение*"></textarea>
        </div>
      </div>
      <div class="feedback__form-bottom">
        <button class="feedback__submit-btn btn _blue" type="submit">Отправить</button>
        <div class="form__policy">
          <label class="form__checkbox js-form-item">
            <input class="form__checkbox-input js-required" type="checkbox" name="privacy-policy">
            <span class="form__checkbox-text">
              <span>Нажимая кнопку “отправить” я даю согласие на обработку персональных данных в соответсвие с <a href="#" target="_blank" class="feedback__policy-link">политикой конфиденциальности</a></span>
            </span>
          </label>
        </div>
      </div>
    </form>
  </div>

  <div class="popup js-popup" id="feedback-success-popup">
    <button class="popup__close-btn js-close-popup" type="button">
      <svg><use xlink:href="assets/sprite.svg#close"></use></svg>
    </button>
    <div class="popup__inner">
      <h3 class="title">Ваша заявка отправлена</h3>
    </div>
  </div>
</section>

{% endblock %}
